@model DivTech.Models.AddFornecedorViewModel
       
@{
}
<h2>Adicionar Fornecedor</h2>
<form method="post" asp-action="Add" >
    <div class="form-group m-3">
        <label for="exampleInputEmail1">Nome do fornecedor</label>
        <input 
            
            class="form-control" 
            id="exampleInputEmail1" 
            aria-describedby="emailHelp" 
            placeholder="Fornecedor"
            asp-for="Nome"
            
        >
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group m-3">
        <label for="CNPJ">CNPJ</label>
        <input 
            
            class="form-control" 
            id="CNPJ"
               placeholder="00.000.000/0000-00"
            asp-for="CNPJ"
            
        >
        <span asp-validation-for="CNPJ" class="text-danger"></span>
    </div>
    <div class="form-group m-3">
        <label for="especialidade">Especialidade</label>
        <select 
            class="form-control" 
            id="especialidade" 
            asp-for="Especialidade"
        >
            <option value="1">Comércio</option>
            <option value="2">Serviço</option>
            <option value="3">Indústria</option>
        </select>
    </div>
    <div class="form-group m-3">
        <label for="CEP">CEP</label>
        <input 
            
            class="form-control" 
            id="CEP"
            class="CEP"
            placeholder="00000-000"
            asp-for="CEP"
            
        >
        <span asp-validation-for="CEP" class="text-danger"></span>
    </div>
    <div class="form-group m-3">
        <label for="endereco">Endereço</label>
        <input 
             
            class="form-control" 
            id="endereco"
            asp-for="Endereco"
            
            readonly
        >
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>
    

    <button type="submit" class="btn btn-primary w-100">Criar Fornecedor</button>
</form>
